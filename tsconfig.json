{
  "compilerOptions": {
    "target": "es2019",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "removeComments": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "strictNullChecks": true,
    "lib": ["es2020"]
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
